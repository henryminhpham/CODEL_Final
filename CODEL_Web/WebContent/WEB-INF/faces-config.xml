<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>fr</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>com.international.msg</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
	<navigation-rule>
		<from-view-id>/createContact.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{createContact.persist}</from-action>
			<from-outcome>listContacts</from-outcome>
			<to-view-id>/listContacts.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/createEnterprise.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{createEnterprise.persist}</from-action>
			<from-outcome>listContacts</from-outcome>
			<to-view-id>/listContacts.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/listContacts.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{listContacts.delContact}</from-action>
			<from-outcome>deleteSuccess</from-outcome>
			<to-view-id>/createContact.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>